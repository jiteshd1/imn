                | Settings 
                span.sr-only (current)
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#') Login
        // /.navbar-collapse
      // /.container-fluid
    // START LIGHTBOXES
    .lightbox-info-popup
      #UserEmailLightbox.modal.fade
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
              h3.modal-title.color-light-blue.noto-sans User Email Requirements
            .modal-body
              p.font-size-fourtheen-px.noto-sans Your account email must fullfil the following requirements:
              .display-block
                ol.segoe.font-size-fourtheen-px
                  li It must unique
                  li It must be a valid email account
                  li Some other reason
                  li ...
            .modal-footer
              button.btn.btn-danger(type='button', data-dismiss='modal')
                i.fa.fa-close.padding-right-five-px
                | Close
      #ForgotPasswordLightbox.modal.fade
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
              h3.modal-title.color-light-blue.noto-sans Forgot Password?
            .modal-body
              p.font-size-fourtheen-px.noto-sans How to reset access to your account:
              .display-block
                ol.segoe.font-size-fourtheen-px
                  li Provide your account's email address
                  li It must be a valid email account
                  li Some other reason
                  li ...
            .modal-footer
              button.btn.btn-danger(type='button', data-dismiss='modal')
                i.fa.fa-close.padding-right-five-px
                | Close
      #CVVLightbox.modal.fade
        .modal-dialog
          .modal-content
            .modal-header
              button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
              h3.modal-title.color-light-blue.noto-sans Password Requirements
            .modal-body
              p.font-size-fourtheen-px.noto-sans Help make your ProPay account more secure by following there requirements:
              .display-block
                ol.segoe.font-size-fourtheen-px
                  li At least 1 upper-case letter (A-Z)
                  li At least 1 lower-case letter (a-z)
                  li At least 1 number (0-9)
                  li Must be between 8-19 characters
                  li Optional: Spaces and keyword symbols (! @ # $ % ^ & * _)
            .modal-footer
              button.btn.btn-danger(type='button', data-dismiss='modal')
                i.fa.fa-close.padding-right-five-px
                | Close
    // END LIGHTBOXES
    #SignUpForm.modal-dialog
      .modal-content
        .modal-header
          h3#myModalLabel.modal-title
            i.fa.fa-user
            |  Setup Your New Account
        .modal-body
          .row
            .col-xs-12
              .well
                .padding-top-and-bottom-fiftheen-px.align-text-center.hidden-sm.hidden-xs
                  i.fa.fa-user(style='width: 65px; height: 65px; font-size: 45px; margin: 0 auto 8px; padding-top: 7px; padding-left: 13px; display: block; border: solid 1px #CDCDCD; color: #CECECE; -moz-border-radius: 50%; -webkit-border-radius: 50%; border-radius: 50%;')
                form#NewAccountForm(method='POST', action='/api/1/register', novalidate='novalidate')
                  .form-group
                    .input-group
                      span#UserEmail.input-group-addon
                        i.fa.fa-user(title='Enter Your Email')
                      input#username.form-control(type='email', name='username', value='', required='', title='Please enter you username', placeholder='example@gmail.com')
                      span#PasswordLockAltHelp.input-group-addon
                        a(href='#UserEmailLightbox', data-toggle='modal')
                          i.fa.fa-question-circle
                    span.help-block
                  .form-group
                    .input-group
                      span#UserPassword.input-group-addon
                        i.fa.fa-unlock-alt(title='Choose password')
                      input#password.form-control(type='password', name='password', value='', required='', title='Choose password', placeholder='Choose a password')
                      span#PasswordLockAltHelp.input-group-addon
                        a(href='#CVVLightbox', data-toggle='modal')
                          i.fa.fa-question-circle
                    span.help-block
                  .form-group
                    .input-group
                      span#UserPasswordMatch.input-group-addon
                        i.fa.fa-lock(title='Choose password')
                      input#passwordmatch.form-control(type='password', name='passwordmatch', value='', required='', title='Re-enter password', placeholder='Re-enter password')
                      span#PasswordLockAltHelp.input-group-addon
                        a(href='#CVVLightbox', data-toggle='modal')
                          i.fa.fa-question-circle
                  button#register.btn.btn-success.btn-block(type='button') Submit
              p(style='text-align: center;')
                a(href='/login', title='Forgot password?') Already have an account? Login here
    .navbar.navbar-default.navbar-fixed-bottom
      .container
  include ./includes/footer.jade
